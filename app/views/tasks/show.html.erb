<h1><%= @task.title %></h1>
<%= link_to "Edit", edit_task_path(@task) %>
<p>Details : <%= @task.details %> - <%= @task.completed %></p>
<%= link_to "Retour", tasks_path %>
<%= link_to ("<i class='fa-solid fa-trash'></i>").html_safe,
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
